
@model ElectronicJournal.Web.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Авторизация";
}
    <div class="h1 mb-1">
        Авторизация
    </div>
<div class="row w-100 h-100 justify-content-center">
    <div class="col-4">
        
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="text-black-50" asp-for="UserName">Имя пользователя:</label><br />
                <input class="form-control" asp-for="UserName" />
                <span  class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label class="text-black-50" asp-for="UserPassword">Пароль:</label><br />
                <input class="form-control" asp-for="UserPassword" />
                <span class="text-danger" asp-validation-for="UserPassword"></span>
            </div>
            <div class="form-group">
                <div class="form-check-inline">
                    <label class="form-check-label text-black-50" asp-for="RememberMe">Запомнить меня?</label>
                    <input class="ml-2 form-check" asp-for="RememberMe" />
                </div>
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>
    

