@using ElectronicJournal.Web.Areas.Admin.Models.StudyGroups

@model EditInfoStudyGroupViewModel
@{
    ViewBag.CurrentPageName = ElectronicJournalPageNames.PageNames.AdministrationStudyGroups;
    ViewBag.Title = ElectronicJournalPageNames.DisplayPageNames.AdministrationStudyGroups;
}

    <div class="row mb-1">
        <div class="col">
            <div class="h1">
                Изменить данные группы - <span class="h3">@Model.Input.Name</span>
            </div>
        </div>
        <div class="col text-right">
            <a href="@Model.ReturnUrl" class="btn btn-info">Назад</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" asp-action="EditInfoStudyGroup">
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="Input.StudyGroupId" />
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="text-black-50">Имя группы:</label>
                    <input class="form-control" asp-for="Input.Name" />
                    <span class="text-danger" asp-validation-for="Input.Name"></span>
                </div>
                <label class="text-black-50">Учебные предметы:</label>
                <div class="form-row">
                    @for (int i = 0; i < Model.Input.AcademicSubjectComboboxes.Count; i++)
                    {
                        <div class="col-3 form-check form-check-inline">
                            <label class="form-check-label">@Model.Input.AcademicSubjectComboboxes[i].DisplayText</label>
                            <input class="form-check-input" type="checkbox" asp-for="@Model.Input.AcademicSubjectComboboxes[i].IsSelected" />
                            <input type="hidden" asp-for="@Model.Input.AcademicSubjectComboboxes[i].Value" />
                        </div>
                    }

                </div>
                <label class="text-black-50">Преподаватели:</label>
                <div class="form-row">
                    @for (int i = 0; i < Model.Input.TeacherComboboxes.Count; i++)
                    {
                        <div class="col-3 form-check form-check-inline">
                            <label class="form-check-label">@Model.Input.TeacherComboboxes[i].DisplayText</label>
                            <input class="form-check-input" type="checkbox" asp-for="@Model.Input.TeacherComboboxes[i].IsSelected" />
                            <input type="hidden" asp-for="@Model.Input.TeacherComboboxes[i].Value" />
                        </div>
                    }

                </div>
                <br />
                <input class="btn w-100 btn-primary" type="submit" value="Изменить" />
            </form>
        </div>
    </div>

