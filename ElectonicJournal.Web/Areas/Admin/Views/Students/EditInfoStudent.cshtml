@using ElectronicJournal.Web.Areas.Admin.Models.Students

@model EditInfoStudentViewModel
@{
    ViewBag.CurrentPageName = ElectronicJournalPageNames.PageNames.AdministrationUsers;
    ViewBag.Title = ElectronicJournalPageNames.DisplayPageNames.AdministrationUsers;
}

    <div class="row mb-1">
        <div class="col">
            <div class="h1">
                Изменить данные ученика - <span class="h3">@Model.FullName</span>
            </div>
        </div>
        <div class="col text-right">
            <a href="@Model.ReturnUrl" class="btn btn-info">Назад</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" asp-action="EditInfoStudent">
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="Input.StudentId" />
                <input type="hidden" asp-for="FullName" />
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="text-black-50">Учебная группа:</label>
                    <select class="custom-select-sm" asp-for="Input.StudyGroupId" asp-items="ViewBag.StudyGroups">
                        <option selected="selected" disabled="disabled">Выберите учебную гурппу</option>
                    </select>
                </div>
                <input class="btn w-100 btn-primary" type="submit" value="Изменить" />
            </form>
        </div>
    </div>

