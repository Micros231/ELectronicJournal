@using ElectronicJournal.Web.Areas.Admin.Models.Users
@model CreateUserViewModel
@{
    ViewBag.CurrentPageName = ElectronicJournalPageNames.PageNames.AdministrationUsers;
    ViewBag.Title = ElectronicJournalPageNames.DisplayPageNames.AdministrationUsers;
}
<div class="row mb-1">
    <div class="col">
        <div class="h1">
            Создать пользователя
        </div>
    </div>
    <div class="col text-right">
        <a href="@Model.ReturnUrl" class="btn btn-info">Назад</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-4">
        <form method="post" asp-action="CreateUser">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="text-black-50">Имя пользователя:*</label>
                <input class="form-control" asp-for="Input.UserName" />
                <span class="text-danger" asp-validation-for="Input.UserName"></span>
            </div>
            <div class="form-group">
                <label class="text-black-50">Имя:</label>
                <input class="form-control" asp-for="Input.FirstName" />
                <span class="text-danger" asp-validation-for="Input.FirstName"></span>
            </div>
            <div class="form-group">
                <label class="text-black-50">Фамилия:</label>
                <input class="form-control" asp-for="Input.LastName" />
                <span class="text-danger" asp-validation-for="Input.LastName"></span>
            </div>
            <div class="form-group">
                <label class="text-black-50">Почта:*</label>
                <input class="form-control" asp-for="Input.Email" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <label class="text-black-50">Пароль:*</label>
                <input class="form-control" asp-for="Input.Password" />
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-group">
                <div class="form-check-inline">
                    <label class="form-check-label">@Model.Input.AdminRole.DisplayText</label>
                    <input class="form-check-input ml-1" asp-for="Input.AdminRole.IsSelected" />
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label">@Model.Input.TeacherRole.DisplayText</label>
                    <input class="form-check-input ml-1" asp-for="Input.TeacherRole.IsSelected" />
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label">@Model.Input.StudentRole.DisplayText</label>
                    <input class="form-check-input ml-1" asp-for="Input.StudentRole.IsSelected" />
                </div>
            </div>
            <br />
            <input class="btn w-100 btn-primary" type="submit" value="Создать" />
        </form>
    </div>
</div>

