@using ElectronicJournal.Web.Areas.Admin.Models.Users
@model EditPasswordUserViewModel
@{
    ViewBag.CurrentPageName = ElectronicJournalPageNames.PageNames.AdministrationUsers;
    ViewBag.Title = ElectronicJournalPageNames.DisplayPageNames.AdministrationUsers;
}

    <div class="row mb-1">
        <div class="col">
            <div class="h1">
                Изменить пароль пользователя - <span class="h3">@Model.UserName</span>
            </div>
        </div>
        <div class="col text-right">
            <a href="@Model.ReturnUrl" class="btn btn-info">Назад</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" asp-action="EditPassword">
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="UserName" />
                <input type="hidden" asp-for="Input.UserId" />
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label class="text-black-50">Нынешний пароль:*</label>
                    <input class="form-control" asp-for="Input.CurrentPassword" />
                    <span class="text-danger" asp-validation-for="Input.CurrentPassword"></span>
                </div>
                <div class="form-group">
                    <label class="text-black-50">Новый пароль:*</label>
                    <input class="form-control" asp-for="Input.NewPassword" />
                    <span class="text-danger" asp-validation-for="Input.NewPassword"></span>
                </div>
                <br />
                <input class="btn w-100 btn-primary" type="submit" value="Изменить" />
            </form>
        </div>
    </div>

